<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jimchen.kanditag" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.google.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.jimchen.kanditag.permission.C2D_MESSAGE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-feature android:name="android.hardware.camera.flash"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <!--
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <receiver
            android:name="com.jimchen.kanditag.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.jimchen.kanditag" />
            </intent-filter>
        </receiver>

        <service android:name="com.jimchen.kanditag.GcmIntentService" />

        <activity
            android:name="com.jimchen.kanditag.MainActivity"
            android:configChanges="orientation"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.SplashActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jimchen.kanditag.MyFragment"
            android:label="@string/title_activity_my_fragment" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.QRScanner"
            android:label="@string/title_activity_qrscanner"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.Login"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.Message"
            android:label="@string/title_activity_message"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.Kandi"
            android:label="@string/title_activity_kandi"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.Feed"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.Browse"
            android:label="@string/title_activity_browse"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.Menu"
            android:label="@string/title_activity_scan" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.VerticalViewPager"
            android:label="@string/title_activity_vertical_view_pager" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.CameraPreview"
            android:label="@string/title_activity_camera_preview" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.MessageDialogue"
            android:label="@string/title_activity_messaging_ui"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".FeedFragment"
            android:label="@string/title_activity_kandi_fragment"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.TakenPictureContainer"
            android:label="@string/title_activity_taken_picture_container" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.ConversationListItem"
            android:label="@string/title_activity_conversation_list_item" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.MiniProfileView"
            android:label="@string/title_activity_mini_profile_view" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.DisplayUsersForNewMessage"
            android:label="@string/title_activity_display_users_for_new_message" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.GroupMessageDialogue"
            android:label="@string/title_activity_group_message_dialogue"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.ProfileFragment"
            android:label="@string/title_activity_profile_fragment" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.BannerFragment"
            android:label="@string/title_activity_banner_fragment" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.NavigationBarFragment"
            android:label="@string/title_activity_navigation_bar_fragment" >
        </activity>
        <activity
            android:name=".ExchangeFragment"
            android:label="@string/title_activity_ticket_fragment" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.GroupFragment"
            android:label="@string/title_activity_group_fragment" >
        </activity>
        <activity
            android:name="com.jimchen.kanditag.NavBarScalable"
            android:label="@string/title_activity_nav_bar_scaleable" >
        </activity>
    </application>

</manifest>
