<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/NewPostOptionsFragment_close"
        android:background="@color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <LinearLayout
        android:background="@color/dark_charcoal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="210dp"
        android:layout_height="360dp">

        <View
            android:layout_weight="2.5"
            android:layout_width="210dp"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/NewPostOptionsFragment_newImagePost"
            android:layout_gravity="center"
            android:src="@drawable/golden_kt_logo"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:text="Image"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1.8"
            android:layout_width="210dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/NewPostOptionsFragment_newVideoPost"
            android:layout_gravity="center"
            android:src="@drawable/golden_kt_logo"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:text="Video"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1.8"
            android:layout_width="210dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/NewPostOptionsFragment_newTicketPost"
            android:layout_gravity="center"
            android:src="@drawable/golden_kt_logo"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:text="Ticket"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1.4"
            android:layout_width="210dp"
            android:layout_height="80dp" />

        </LinearLayout>

</RelativeLayout>