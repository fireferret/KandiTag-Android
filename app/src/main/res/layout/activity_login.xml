<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.kanditag.kanditag.Login">

    <!--
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/moderndark_splash640x1136"/>
        -->

    <android.support.v4.view.ViewPager
        android:id="@+id/login_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="47dp"/>

    <com.facebook.widget.LoginButton
        android:id="@+id/login_fbLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>

    <ImageView
        android:id="@+id/Login_loginButtonImageViewBackground"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/vegas_gold"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/gold"
        android:id="@+id/login_ktLoginButton"
        android:layout_marginBottom="2dp"/>

    <!--
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
        -->

    <ImageView
        android:paddingBottom="25dp"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:id="@+id/login_logo"
        android:src="@drawable/splash_screen_kt_logo_universal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
