          android:layout_marginTop="1dp"
          android:layout_width="fill_parent"
          android:layout_height="50dp" /> -->

        </RelativeLayout>


        </LinearLayout>

    <FrameLayout
        android:id="@+id/LoginActivity_LoginFragmentContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


</RelativeLayout>
