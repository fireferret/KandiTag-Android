    <android.support.v4.view.ViewPager
        android:id="@+id/login_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="47dp"/>

    <com.facebook.widget.LoginButton
        android:background="@color/transparent"
        android:id="@+id/LoginActivity_FBLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <View
            android:layout_width="fill_parent"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/LoginActivity_kanditaglogo"
            android:src="@drawable/kanditag_splashscreenlogo_clear"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp" />

        <RelativeLayout
            android:id="@+id/LoginActivity_FacebookConnect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_above="@+id/LoginActivity_LoginLinearLayout"
            android:textColor="@color/gold"
            android:textSize="9dp"
            android:gravity="center|bottom"
            android:paddingBottom="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="*By signing up or connecting through facebook™, you are agreeing to the Terms and Conditions concerning the usage of KandiTag™"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/LoginActivity_LoginLinearLayout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:background="@color/transparent"
                    android:layout_weight="10"
                    android:id="@+id/LoginActivity_SignUp"
                    android:text="Sign Up"
                    android:textColor="@color/gold"
                    android:layout_width="1dp"
                    android:layout_height="50dp" />

                <View
                    android:layout_gravity="center"
                    android:layout_weight=".05"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@color/gold"/>

                <Button
                    android:background="@color/transparent"
                    android:layout_weight="10"
                    android:id="@+id/LoginActivity_Login"
                    android:text="Login"
                    android:textColor="@color/gold"
                    android:layout_width="1dp"
                    android:layout_height="50dp" />


            </LinearLayout>

