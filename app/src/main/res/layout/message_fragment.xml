<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/MessageFragment_ExitButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/do_not_save"/>

    <TextView
        android:text="Messages"
        android:paddingTop="10dp"
        android:gravity="center"
        android:id="@+id/MessageFragment_TitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="65dp" />

    <ListView
        android:id="@+id/MessageFragment_ListView"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/MessageFragment_TitleTextView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></ListView>

</RelativeLayout>