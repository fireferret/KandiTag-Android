<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray" >

    <View
        android:id="@+id/MessageFragment_TopNavBar"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/dark_charcoal"/>

    <ImageView
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:background="@drawable/popout_layout_textbanner_message"/>

    <ImageView
        android:id="@+id/MessageFragment_ExitButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/kanditag_back_button"/>

    <ImageView
        android:id="@+id/MessageFragment_NewMessageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/MessageFragment_ExitButton"
        android:background="@drawable/kanditag_plus_button"/>

    <FrameLayout
        android:id="@+id/MessageFragment_SearchBarContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/MessageFragment_TopNavBar"/>

