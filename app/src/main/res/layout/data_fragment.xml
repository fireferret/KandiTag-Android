<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <View
        android:id="@+id/DataFragment_Topbar"
        android:background="@color/gold"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
        android:text="Feed"
        android:textSize="11dp"
        android:textColor="@color/gold"
        android:id="@+id/DataFragment_FeedButton"
        android:background="@color/black"
        android:layout_weight=".1"
        android:layout_width="90dp"
        android:layout_height="50dp"/>

    <Button
        android:text="Message"
        android:textSize="11dp"
        android:textColor="@color/white"
        android:id="@+id/DataFragment_MessageButton"
        android:layout_toRightOf="@+id/DataFragment_FeedButton"
        android:background="@color/black"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_weight=".1"/>

    <Button
        android:text="Exchange"
        android:textSize="11dp"
        android:textColor="@color/white"
        android:id="@+id/DataFragment_ExchangeButton"
        android:layout_toRightOf="@+id/DataFragment_MessageButton"
        android:background="@color/black"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_weight=".1"/>


    <Button
        android:text="Profile"
        android:textSize="11dp"
        android:textColor="@color/white"
        android:id="@+id/DataFragment_ProfileButton"
        android:layout_toRightOf="@+id/DataFragment_ExchangeButton"
        android:background="@color/black"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_weight=".1"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/DataFragment_ViewPager"
        android:layout_below="@+id/DataFragment_Topbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


</RelativeLayout>