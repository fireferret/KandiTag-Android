<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <View
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:background="@color/black"/>
    
    <ImageView
        android:id="@+id/UsersAndGroupsForNewMessageListItem_ImageView"
        android:padding="6dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/splash_screen_kt_logo_universal"/>

    <TextView
        android:paddingTop="26dp"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:id="@+id/UsersAndGroupsForNewMessageListItem_Username"
        android:layout_toRightOf="@+id/UsersAndGroupsForNewMessageListItem_ImageView"
        android:layout_width="fill_parent"
        android:layout_height="65dp" />

    <TextView
        android:paddingTop="26dp"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:id="@+id/UsersAndGroupsForNewMessageListItem_KandiName"
        android:layout_toRightOf="@+id/UsersAndGroupsForNewMessageListItem_ImageView"
        android:layout_width="fill_parent"
        android:layout_height="65dp" />


</RelativeLayout>