<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="6dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <View
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/MessageRowItem_SenderProfileImageContainer"
        android:src="@drawable/golden_kt_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:padding="5dp"/>

    <TextView
        android:text="Name"
        android:id="@+id/MessageRowItem_SenderName"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/MessageRowItem_SenderProfileImageContainer"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/MessageRowItem_KandiName"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/MessageRowItem_SenderProfileImageContainer"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/MessageRowItem_TimeStamp"
        android:text="12:34:56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="19dp"/>

    <TextView
        android:text="Message goes in here... Lets assume the message gets really long then what it just goes off the page doesnt it"
        android:id="@+id/MessageRowItem_MessageText"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_below="@+id/MessageRowItem_SenderName"
        android:layout_toRightOf="@+id/MessageRowItem_SenderProfileImageContainer"
        android:textColor="@color/white"
        android:textSize="14dp" />

</RelativeLayout>