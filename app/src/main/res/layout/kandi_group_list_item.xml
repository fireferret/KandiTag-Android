<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kanditag.kanditag.KandiGroupListItem">

    <TextView
        android:text="KANDI_NAME"
        android:id="@+id/KandiGroupListItem_KandiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/KandiGroupListItem_Qr"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_0"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@color/black"/>

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_1"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/KandiGroupListItem_0"
        android:layout_marginTop="22dp"
        android:background="@color/blue"/>

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_2"
        android:layout_toRightOf="@+id/KandiGroupListItem_1"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@color/black"/>

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_3"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/KandiGroupListItem_2"
        android:layout_marginTop="22dp"
        android:background="@color/blue"/>

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_4"
        android:layout_toRightOf="@+id/KandiGroupListItem_3"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@color/black"/>

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_5"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/KandiGroupListItem_4"
        android:layout_marginTop="22dp"
        android:background="@color/blue"/>

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_6"
        android:layout_toRightOf="@+id/KandiGroupListItem_5"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@color/black"/>

    <ImageView
        android:layout_below="@+id/KandiGroupListItem_KandiName"
        android:id="@+id/KandiGroupListItem_7"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/KandiGroupListItem_6"
        android:layout_marginTop="22dp"
        android:background="@color/blue"/>

</RelativeLayout>
