<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/main_relativeLayout"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_frameLayoutPreview"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/Main_ViewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


    <ImageView
        android:id="@+id/Main_CameraButton"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/kanditag_camerabutton"/>

    <View
        android:id="@+id/Main_VerticalPlaceholder"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>

    <ImageView
        android:id="@+id/Main_toProfile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/Main_VerticalPlaceholder"
        android:src="@drawable/popout_layout_menu_item"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <ImageView
        android:id="@+id/Main_toMessage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        android:layout_above="@+id/Main_toProfile"
        android:src="@drawable/popout_layout_menu_item"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <ImageView
        android:id="@+id/Main_toFeed"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/Main_toProfile"
        android:src="@drawable/popout_layout_menu_item"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <ImageView
        android:id="@+id/Main_toTicket"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/Main_toFeed"
        android:src="@drawable/popout_layout_menu_item"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <ImageView
        android:id="@+id/main_CameraButton"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <View
        android:id="@+id/Main_PreviewTop"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/black"/>

    <View
        android:id="@+id/Main_PreviewBottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_takenPictureContainer"/>

    <ImageView
        android:id="@+id/Main_FlashlightButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/flash_auto_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="discard"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:id="@+id/main_closePictureDisplay"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:text="save"
        android:textColor="@color/yellow"
        android:background="@color/black"
        android:id="@+id/main_saveAndClosePictureDisplay"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_shadedBackground"
        android:background="@color/transparent_gray"/>

    <FrameLayout
        android:id="@+id/main_miniProfileViewFrameLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <FrameLayout
        android:id="@+id/main_miniProfileViewFrameLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


</RelativeLayout>