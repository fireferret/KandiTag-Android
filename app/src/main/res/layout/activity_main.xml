<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    tools:context="com.jimchen.kanditag.Main">

    <!--
    <eu.livotov.zxscan.ScannerView
        android:id="@+id/Main_Scanner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

        -->

    <FrameLayout
        android:id="@+id/Main_PreviewContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


    <com.jimchen.kanditag.VerticalViewPager
        android:nestedScrollingEnabled="true"
        android:id="@+id/Main_VerticalViewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <ImageView
        android:background="@color/transparent"
        android:id="@+id/Main_Camera"
        android:src="@drawable/kanditag_camera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

    <ImageView
        android:background="@color/black"
        android:id="@+id/Main_CapturedImagePreviewContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <Button
        android:id="@+id/Main_CancelImage"
        android:text="Cancel"
        android:textColor="@color/gold"
        android:background="@drawable/kanditag_default_button"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/Main_PostImage"
        android:text="Post"
        android:textColor="@color/gold"
        android:background="@drawable/kanditag_default_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
