    <ImageView
        android:id="@+id/ProfileActivity_DefaultProfileImageBackground"
        android:layout_width="fill_parent"
        android:layout_height="225dp"
        android:background="@color/black"/>

    <ImageView
        android:src="@drawable/kanditag_backbutton"
        android:id="@+id/ProfileActivity_back"
        android:layout_marginLeft="20dp"
        android:layout_width="40dp"
        android:layout_height="35dp" />

    <ImageView
        android:src="@drawable/kanditag_opensettings"
        android:id="@+id/ProfileActivity_opensettings"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_width="40dp"
        android:layout_height="35dp" />


    <ImageView
        android:background="@drawable/popout_layout_menu_item"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/ProfileActivity_ProfileImageContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_width="105dp"
        android:layout_height="105dp" />

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="168dp"
        android:background="@drawable/splash_screen_kt_logo_universal"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="165dp"
        android:text="Jim Chen"
        android:textSize="25dp"
        android:gravity="bottom"
        android:id="@+id/ProfileActivity_UserName"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <View
        android:id="@+id/ProfileActivity_GridViewBackground"
        android:layout_below="@+id/ProfileActivity_DefaultProfileImageBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/dark_charcoal"/>

    <View
        android:id="@+id/ProfileActivity_NavigationBarContainer"
        android:layout_below="@+id/ProfileActivity_DefaultProfileImageBackground"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"/>

    <Button
        android:text="About Me"
        android:id="@+id/ProfileActivity_AboutMeLabel"
        android:textColor="@color/gold"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:background="@color/black"
        android:layout_below="@+id/ProfileActivity_DefaultProfileImageBackground"/>

    <Button
        android:text="Friends"
        android:id="@+id/ProfileActivity_FriendsLabel"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:background="@color/black"
        android:layout_below="@+id/ProfileActivity_DefaultProfileImageBackground"/>

    <Button
        android:text="Gallery"
        android:id="@+id/ProfileActivity_GalleryLabel"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@color/black"
        android:layout_below="@+id/ProfileActivity_DefaultProfileImageBackground"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/ProfileActivity_ViewPager"
        android:layout_below="@+id/ProfileActivity_NavigationBarContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
