<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:id="@+id/Message_RelativeLayout"
    tools:context="com.jimchen.kanditag.Message">

    <!-- android:background="#8C000000" -->

    <TextView
        android:text="Messages"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="1dp"
        android:id="@+id/Message_titleTextView"/>

    <ImageView
        android:id="@+id/Message_SwitchBetweenGroupAndUserNewMessage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@color/black"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/Message_SwitchBetweenGroupAndUser"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@color/yellow"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/Message_newMessageButton"
        android:src="@drawable/splash_screen_kt_logo_universal"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/Message_closeNewMessageButton"
        android:src="@drawable/do_not_save"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/Message_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/Message_titleTextView">

        <ListView
            android:id="@+id/Message_ListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/Message_FrameLayout"
        android:layout_below="@+id/Message_titleTextView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <!--

    <LinearLayout
        android:id="@+id/conversationLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/messageTextView">

        <ListView
            android:id="@+id/conversationListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></ListView>

    </LinearLayout>

    -->


</RelativeLayout>
